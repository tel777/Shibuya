<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.Ichif1205.shibuya"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="16" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.Ichif1205.shibuya.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.Ichif1205.shibuya.TopActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_top"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.Ichif1205.shibuya.RankActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_rank"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.Ichif1205.shibuya.SettingActivity"
            android:configChanges="keyboardHidden"
            android:label="@string/title_activity_setting"
            android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>